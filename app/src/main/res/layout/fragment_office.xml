                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/off_img32"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit"/>

                <ImageView
