<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:orientation="vertical">

    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/office_card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFCCBC"
                android:text="@string/off_section"
                android:textColor="#000000"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/off_spin1"
                android:paddingStart="20dp"
                android:paddingTop="40dp"
                android:text="@string/off_ques1"
                android:textColor="#000000"
                android:textSize="18sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp">

                <Spinner
                    android:id="@+id/off_spin1"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"/>


                <!-- <ImageView
                    android:id="@+id/off_img11"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/off_img12"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/off_img12"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ok_grey" /> -->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryTransparent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/off_edit2"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/off_ques2"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp">

                <EditText
                    android:id="@+id/off_edit2"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:inputType="number"
                    android:singleLine="true"/>

                <ImageView
                    android:id="@+id/off_img21"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/off_img22"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit"/>

                <ImageView
                    android:id="@+id/off_img22"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ok_grey"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryTransparent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/off_spin3"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/off_ques3"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <RelativeLayout
