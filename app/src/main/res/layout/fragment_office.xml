                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ok_grey"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryTransparent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/off_radioGroup6"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/off_ques6"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp">

                <RadioGroup
                    android:id="@+id/off_radioGroup6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/off_radioButton61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/radioYes"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/off_radioButton62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/radioNo"
                        android:textSize="16sp"/>
                </RadioGroup>

                <ImageView
                    android:id="@+id/off_img61"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/off_img62"
                    android:scaleType="fitXY"
