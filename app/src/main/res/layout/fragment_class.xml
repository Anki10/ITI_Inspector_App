<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewGeneral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- SECTION Training Centre Detail's -->

        <android.support.v7.widget.CardView
            android:id="@+id/gen_card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingRight="@dimen/margin_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="40dp"
                    android:text="Classroom Name"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editClassName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgClassNameEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgClassNameSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgClassNameRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="As Per NCVT Norms"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editNCVTNorms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgNCVTNormsEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgNCVTNormsSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgNCVTNormsRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Classroom Area"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editClassroomArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:maxLength="7"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgClassroomAreaEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgClassroomAreaSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgClassroomAreaRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Shortage Area"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editShortageArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgShortageAreaEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgShortageAreaSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgShortageAreaRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="What is the width of the classroom"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editwidth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgwidthEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgwidthSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgwidthRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:text="Are all the wires and switch boards properly Covered, Secured and Earthed (concealed conduit or on batten)?"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/spinWire"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/yes_no"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imgWireEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/imgWireSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ok_grey"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/imgWireRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                    <ToggleButton
                        android:id="@+id/imgWireNC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="The ceiling of the classroom is made up of"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinRoof"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/class_roof"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imgRoofEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgRoofSave"
                        android:layout_gravity="center"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgRoofRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks" />

                    <ToggleButton
                        android:id="@+id/imgRoofNC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Is the ceiling height less than 10 feet?"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinHeight"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/yes_no"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imgHeightEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgHeightSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgHeightRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks" />




                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Are the walls of Classroom made of tin?"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinTin"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/yes_no"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imgTinEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgTinSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgTinRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks" />


                    <ToggleButton
                        android:id="@+id/imgTinNC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp">

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/HeadingFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/login_background"
                        android:text="Submit"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>