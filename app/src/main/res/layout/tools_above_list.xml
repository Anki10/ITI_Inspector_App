<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:padding="5dp">
    <TextView
        android:id="@+id/equipmentName"
        android:layout_width="0dp"
        android:layout_weight="1.6"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="Name of the Equipment"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/check_groutingRequired"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text=""
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:textColor="#000"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/check_groutingAvailable"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text=""
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:textColor="#000"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/check_engravingRequired"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text=""
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:textColor="#000"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/check_engravingAvailable"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text=""
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:textColor="#000"
        android:textStyle="bold"/>



</LinearLayout>