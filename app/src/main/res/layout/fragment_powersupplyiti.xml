<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollViewGeneral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- SECTION Training Centre Detail's -->

        <android.support.v7.widget.CardView
            android:id="@+id/gen_card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingRight="@dimen/margin_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="40dp"
                    android:text="Is the Connection on the name of ITI?"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_isconnection_nameiti"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/arrauInstituteExcellence"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/img_isconnection_nameiti_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/img_isconnection_nameiti_save"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/img_isconnection_nameiti_remarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>


                    <ToggleButton
                        android:id="@+id/img_isconnection_nameiti_NC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Electrical Connection Issued in The Name of"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgITINameGenEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/edt_connectionissued"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgITINameGenSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/img_connectionissued_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/img_connectionissued_save"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/img_connectionissued_remarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                    <ToggleButton
                        android:id="@+id/img_connectionissued_NC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Date of Connection(DD/MM/YYYY)"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_dateconnection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:inputType="date"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/imgdateconnectionEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/imgdateconnectionSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/img_dateconnection_remarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Is the Electricity Connection Non-Domestic and 3-Phased?"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/editElectricity"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/yes_no"
                        android:singleLine="true"/>

                    <!--<EditText-->
                    <!--android:id="@+id/editBiometricDevicesGen"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/margin_large"-->
                    <!--android:layout_marginRight="@dimen/margin_large"-->
                    <!--android:layout_weight="1"-->
                    <!--android:inputType="text"-->
                    <!--android:singleLine="true"-->
                    <!--android:textColor="@drawable/edit_text_selector"/>-->

                    <ImageView
                        android:id="@+id/imgElectricityEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgElectricitySave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgElectricityRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                    <ToggleButton
                        android:id="@+id/img_Electricity_NC"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:textColor="@android:color/transparent"
                        android:background="@drawable/check"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryTransparent"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Power supply available in the institute(In KW)"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_powersuppplyneededasper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@drawable/edit_text_selector"/>

                    <ImageView
                        android:id="@+id/img_powersuppplyneededasper_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/img_powersuppplyneededasper_save"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/img_powersuppplyneededasper_remarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/gen_edit1"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="Electricity meter sealing certificate from component authority is attached"
                    android:textColor="@color/textHeadColor"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/edtElecricityMeter"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:entries="@array/arrauInstituteExcellence"
                        android:singleLine="true"/>



                    <ImageView
                        android:id="@+id/imgElecricityMeterEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/gen_img12"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imgElecricityMeterSave"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ok_grey" />

                    <ImageView
                        android:id="@+id/imgElecricityMeterRemarks"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/remarks"/>

                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp">

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/HeadingFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/login_background"
                        android:text="Submit"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>