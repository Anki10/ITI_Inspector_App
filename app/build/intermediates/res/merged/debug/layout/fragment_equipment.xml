<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:orientation="vertical">

    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/equip_card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFCCBC"
                android:textColor="#000000"
                android:textSize="30sp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/equip_edit1"
                android:paddingStart="20dp"
                android:paddingTop="40dp"
                android:text="@string/equip_ques1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/equip_edit1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:inputType="text"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/equip_edit2"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/equip_ques2"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/equip_edit2"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:inputType="text"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/equip_edit3"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/equip_ques3"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp" >

                <EditText
                    android:id="@+id/equip_edit3"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:inputType="number"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/equip_img31"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/equip_img32"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/equip_img32"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ok_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/equip_edit4"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/equip_ques4"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp" >

                <EditText
                    android:id="@+id/equip_edit4"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:inputType="text"
                    android:singleLine="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/equip_edit5"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/equip_ques5"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="45dp" >

                <EditText
                    android:id="@+id/equip_edit5"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:inputType="text"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/equip_img51"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/equip_img52"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/equip_img52"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ok_grey" />
            </RelativeLayout>

            <Button
                android:id="@+id/equip_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FF5722"
                android:text="Submit"
                android:textSize="30sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>